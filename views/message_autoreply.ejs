                  <!--<input class="form-control" type="text" value="" id="edit-taskTime">-->
                </div>
              </div>
              <!-- 結束時間 -->
              <div class="form-group">
                <label for="edit-task-time" class="col-2 col-form-label">結束時間:  </label>
                <div class="col-4">
                  <input class="form-control" type="datetime-local" id="edit-taskEnd" style="width:50%" />
                  <!--<input class="form-control" type="text" value="" id="edit-taskTime">-->
                </div>
              </div>
              <!-- 任務內容 -->
              <div class="form-group">
                <label for="edit-task-content" class="col-2 col-form-label">訊息內容:  </label>
                <div class="col-4">
                  <input class="form-control" type="text" value="" id="edit-taskContent">
                </div>
              </div>
              <!-- 負責人 -->
              <div class="form-group">
                <label for="edit-owner" class="col-2 col-form-label">負責人:  </label>
                <div class="col-4">
                  <input class="form-control" type="text" value="" id="edit-owner">
                </div>
              </div>

          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">取消</button>
            <button type="button" class="btn btn-primary" id="edit-submit">更改</button>
          </div>
          </form>
        </div>
      </div>
    </div>
</section>

